<link href="/assets/css/login.css" rel="stylesheet">

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card shadow-lg border-0 bg-dark text-white">
                <div class="card-header bg-dark text-white text-center py-4 border-0">
                    <h2 class="mb-0">
                        <i class="bi bi-box-arrow-in-right"></i> FlashWise
                    </h2>
                    <p class="mb-0 mt-2">Registrar-se</p>
                </div>

                <div class="card-body p-5">
                    <form action="/register" method="POST">
                        <div class="mb-4">
                            <label class="form-label fw-bold" for="name">
                                Name:
                            </label>
                            <input
                                class="form-control form-control-lg bg-dark text-white border-secondary"
                                type="text"
                                id="name"
                                name="user[name]"
                                placeholder="Allan Cordova"
                                required>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold" for="email">
                                <i class="bi bi-envelope"></i> Email:
                            </label>
                            <input
                                class="form-control form-control-lg bg-dark text-white border-secondary"
                                type="email"
                                id="email"
                                name="user[email]"
                                placeholder="seu@email.com"
                                required>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold" for="password">
                                <i class="bi bi-lock"></i> Senha:
                            </label>
                            <input
                                class="form-control form-control-lg bg-dark text-white border-secondary"
                                type="password"
                                id="password"
                                name="user[password]"
                                placeholder="••••••••"
                                required>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold" for="confirm_password">
                                <i class="bi bi-lock"></i> Confirmar Senha:
                            </label>
                            <input
                                class="form-control form-control-lg bg-dark text-white border-secondary"
                                type="password"
                                id="confirm_password"
                                name="user[confirm_password]"
                                placeholder="••••••••"
                                required>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-box-arrow-in-right"></i> Entrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>