<link href="/assets/css/login.css" rel="stylesheet">

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card shadow-lg border-0 bg-dark text-white">
                <div class="card-header bg-dark text-white text-center py-4 border-0">
                    <h2 class="mb-0">
                        <i class="bi bi-box-arrow-in-right"></i> FlashWise
                    </h2>
                    <p class="mb-0 mt-2">Come√ße a criar seus decks</p>
                </div>

                <div class="card-body p-5">
                    <form action="/decks/create" method="POST">
                        <div class="mb-4">
                            <label class="form-label fw-bold" for="name">
                                <i class="bi bi-envelope"></i> Name
                            </label>
                            <input
                                class="form-control form-control-lg bg-dark text-white border-secondary"
                                type="text"
                                id="name"
                                name="deck[name]"
                                placeholder="english"
                                required>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold" for="description">
                                <i class="bi bi-lock"></i> Description
                            </label>
                            <input
                                class="form-control form-control-lg bg-dark text-white border-secondary"
                                type="text"
                                id="description"
                                name="deck[description]"
                                placeholder="sutdy to be verb!"
                                required>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-box-arrow-in-right"></i> save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>